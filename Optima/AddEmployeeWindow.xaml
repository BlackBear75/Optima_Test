<Window x:Class="Optima.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Employee" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="First Name:" Margin="5" />
            <TextBox Name="FirstNameTextBox" Margin="5" />

            <TextBlock Text="Middle Name:" Margin="5" />
            <TextBox Name="MiddleNameTextBox" Margin="5" />

            <TextBlock Text="Last Name:" Margin="5" />
            <TextBox Name="LastNameTextBox" Margin="5" />

            <TextBlock Text="Salary:" Margin="5" />
            <TextBox Name="SalaryTextBox" Margin="5" />

            <TextBlock Text="Position:" Margin="5" />
            <ComboBox Name="PositionComboBox" Margin="5" SelectedIndex="0">
            </ComboBox>

            <Button Content="Add Employee" Width="100" Height="30" HorizontalAlignment="Center" Margin="10" Click="AddEmployeeButton_Click" />
        </StackPanel>
    </Grid>
</Window>
